<h1>Edit Wiki</h1>
 <div class="col-md-8">
     <%= form_for @wiki do |f| %>
       <div class="form-group">
           <%= f.label :title %>
           <%= f.text_field :title, class: 'form-control', placeholder: "Enter title" %>
       </div>
       <div class="form-group">
            <%= f.label :body %>
            <%= f.text_area :body, rows: 10, class: 'form-control', placeholder: "Enter body" %>
            <small>Styling with Markdown is supported</small>
        </div>
        <% if user_is_authorized_to_create_private_post? %>
            <div class="form-group">
               <%= f.label :private, class: 'checkbox' do %>
                   <%= f.check_box :private %> Private Topic
               <% end %>
            </div>
        <% end %>
        <div class="form-group">
             <%= f.submit "Save", class: 'btn btn-success' %>
        </div>
     <% end %>
 </div>

