<%= form_for @wiki do |f| %>
    <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter title" %>
    </div>
    <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: 'form-control', placeholder: "Enter body" %>
    </div>
    <div class="form-group">
       <%= f.label :private, class: 'checkbox' do %>
           <%= f.check_box :private %> Make Private Topic
       <% end %>
    </div>
 
    <%= f.submit "Save", class: 'btn btn-success' %>
<% end %>
